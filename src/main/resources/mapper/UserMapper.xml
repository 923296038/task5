    <insert id="insertAUser" parameterType="User">
        insert into users (username,password_md5) values (#{username},#{password_md5})
    </insert>
    <select id="countByUsername" resultType="java.lang.Integer" parameterType="String">
        SELECT COUNT(username) from users where username = #{username}
    </select>
    <select id="findByUsername" resultType="String" parameterType="String">
        select password_md5 from users where username = #{username}
    </select>

</mapper>